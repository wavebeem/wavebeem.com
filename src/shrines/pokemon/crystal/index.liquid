<style>
  :root {
    --filter-gbc: saturate(80%) contrast(80%) brightness(120%)
      hue-rotate(-10deg) brightness(95%);
  }

  img[src*=".gbc."] {
    transition: 200ms filter;
  }

  :where(:has(#gbc-filter:checked)) {
    img[src*=".gbc."] {
      &:where(:not(:hover)) {
        filter: var(--filter-gbc);
      }
    }
  }

  .gbc-frame {
    display: flex;
    max-width: max-content;
    padding: 4px;
    background: #040404;
    border: 32px solid #333;
    border-radius: 16px;
    position: relative;
  }

  @media (width <= 50rem) {
    .gbc-frame {
      border-width: 16px;
    }
  }

  .gbc-frame img {
    border-radius: 0;
  }
</style>

